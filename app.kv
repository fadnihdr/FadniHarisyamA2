BoxLayout:
    id: main
    Popup:
        id: popup
        size_hint: 0.6, 0.6
        title: "Add Item"
        on_parent:
            if self.parent == main: self.parent.remove_widget(self)
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: itemlabel
                text:'Item Name:'
            TextInput:
                id: iteminput

            Label:
                id: desclabel
                text: 'Description:'

            TextInput:
                id: descinput

            Label:
                id: ppdlabel
                text: 'Price Per Day'
            TextInput:
                id: ppdinput

            BoxLayout:
                id: popup_buttons
                spacing: 1
                padding: 2
                Button:
                    id: saveitem
                    text: 'Save Item'
                    on_press: app.saveitem(iteminput.text, descinput.text, ppdinput.text)
                Button:
                    id: cancelitem
                    text: 'Cancel'
                    on_release: app.press_cancel()
                Button:
                    id: exitpopup
                    text: 'Exit'
                    on_press: app.exit_popup()

            Label:
                id: popup_label
                text: 'Enter details for new item'



    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.5

                Button:
                    id: list_button
                    text: 'List Items'
                    on_press:app.itemlist()

                Button:
                    id: hire_button
                    text: 'Hire Items'
                    on_press:app.itemhire()

                Button:
                    id: return_button
                    text: 'Return Items'
                    on_press:app.itemreturn()

                Button:
                    id: confirm
                    text: 'Confirm'
                    on_press:app.confirm()

                Button:
                    id: add_item
                    text: 'Add New Item'
                    on_press: app.additem()

            GridLayout:
                id: items_buttons
                rows: 3
                orientation: 'vertical'

        Label:
            id: label
            size_hint: 1, None
            height: 50
            text: 'Choose action from the left menu, then select items on the right'
